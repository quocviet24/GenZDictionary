<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header with Back Button and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chi tiết từ lóng"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:gravity="center"
                android:layout_marginEnd="24dp" />

        </LinearLayout>

        <!-- Logo -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_dictionary_logo"
            android:contentDescription="GenZ Dictionary Logo" />

        <!-- Word -->
        <TextView
            android:id="@+id/tv_detail_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_marginBottom="16dp" />

        <!-- Meaning -->
        <TextView
            android:id="@+id/tv_detail_meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <!-- Example -->
        <TextView
            android:id="@+id/tv_detail_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp"
            android:textStyle="italic" />

        <!-- Origin -->
        <TextView
            android:id="@+id/tv_detail_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_secondary" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>